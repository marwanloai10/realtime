<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A16666"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/personName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/person_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/personId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="17dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/person_id"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/personAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <EditText
        android:id="@+id/personAge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="57dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/person_age"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/savedata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personId" />

    <Button
        android:id="@+id/savedata"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#50D656"
        android:text="save data to real time database"
        app:layout_constraintBottom_toTopOf="@+id/getdata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personAge" />

    <Button
        android:id="@+id/getdata"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#FF5722"
        android:text="@string/get_data_to_real_time_database"
        app:layout_constraintBottom_toTopOf="@+id/textdata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savedata" />

    <TextView
        android:id="@+id/textdata"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="31dp"
        android:text="@string/Data"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getdata" />

</androidx.constraintlayout.widget.ConstraintLayout>